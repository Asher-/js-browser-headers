{
  "name": "browser-headers",
  "version": "0.4.1",
  "main": "dist/js/browser-headers.js",
  "browser": "dist/js/browser-headers.umd.js",
  "types": "dist/typings/index.d.ts",
  "repository": "https://github.com/improbable-eng/js-browser-headers",
  "license": "Apache-2.0",
  "keywords": [
    "headers",
    "fetch"
  ],
  "scripts": {
    "clean": "rm -rf build lib dist",
    "build:test": "npm run js:build",
    "build:lib": "npm run js:build",

    "js:transpile": "npx webpack",
    "js:build": "npm run clean && npm run js:transpile",

    "mjs:transpile": "npx tsc -p tsconfig.mjs.json",
    "mjs:build": "npm run clean && npm run mjs:transpile",

    "build": "npm run mjs:build && npm run js:transpile",

    "lint": "tslint -c ./tslint.json ./src/**/*.ts ./test/**/*.ts",
    "test": "npx jasmine test/build/integration-tests.js",

    "prepare": "npm run clean && npm run build:lib",
    "release": "./release.sh ${npm_package_version}"
  },
  "dependencies": {
    "webpack": "^5.12.1"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.11",
    "@types/jasmine": "^3.6.2",
    "@types/node": "^14.14.20",
    "assert": "^2.0.0",
    "babel-loader": "^8.2.2",
    "https-proxy-agent": "^5.0.0",
    "jasmine": "git+https://github.com/ismaproco/jasmine-npm.git",
    "jasmine-ts": "^0.3.0",
    "karma-browserstack-launcher": "^1.6.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-source-map-support": "^1.4.0",
    "ts-loader": "^8.0.14",
    "tslint": "^6.1.3",
    "webpack-cli": "^4.3.1"
  }
}
